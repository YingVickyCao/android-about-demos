<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_CustomView_of_Xfermode" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tv"
                android:text="PorterDuff.Mode 应用 - 圆形圆角"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <com.hades.example.android.widget.custom_view.Xfermode.RoundImageView
                android:layout_width="228dp"
                android:layout_height="228dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/green" />

            <com.hades.example.android.widget.custom_view.Xfermode.RadiusImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_tiny"
                android:background="@color/red" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="PorterDuff.Mode"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_composite_src" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:src="@drawable/ic_composite_dst" />

            </RelativeLayout>

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes"
                android:textSize="30sp" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Source" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Source
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Source Over" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_SourceOver
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Source In" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_SourceIn
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Destination" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Destination
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Destination Over" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_DestinationOver
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Destination In" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_DestinationIn
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />


            <TextView
                style="@style/tv"
                android:text="CLEAR" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Clear
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Source Out" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_SourceOut
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Destination Out" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_DestinationOut
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Blending modes"
                android:textSize="30sp" />

            <TextView
                style="@style/tv"
                android:text="Blending modes - Darken" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Darken
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Blending modes - Lighten" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Lighten
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Blending modes - Multiply" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Multiply
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Blending modes - Screen" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Screen
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Blending modes - Overlay" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Overlay
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Other Enums"
                android:textSize="30sp" />

            <TextView
                style="@style/tv"
                android:text="ADD" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_Add
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="XOR" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_XOR
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Source At Top" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_SourceAtTop
                android:layout_width="256dp"
                android:layout_height="256dp" />

            <View style="@style/div" />

            <TextView
                style="@style/tv"
                android:text="Alpha compositing modes - Destination At Top" />

            <com.hades.example.android.widget.custom_view.Xfermode.PorterDuffModeExampleView_DestinationAtTop
                android:layout_width="256dp"
                android:layout_height="256dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>