<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_CustomView" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_topic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/pageCustomVew"
                style="@style/btn"
                android:text="@string/page_CustomView" />

            <Button
                android:id="@+id/pageDrawingBoard"
                style="@style/btn"
                android:text="@string/page_CustomView_of_drawing_board" />

            <Button
                android:id="@+id/pageFingerMovedBall"
                style="@style/btn"
                android:text="@string/page_CustomView_of_FingerMovedBall" />

            <Button
                android:id="@+id/pageMatrixOnBitmap"
                style="@style/btn"
                android:text="@string/page_CustomView_of_matrix_on_bitmap" />

            <Button
                android:id="@+id/pageBitmapMesh"
                style="@style/btn"
                android:text="@string/page_CustomView_of_bitmap_mesh" />

            <Button
                android:id="@+id/page_CustomVew4CascadeLayout"
                style="@style/btn"
                android:text="@string/page_CustomView_CascadeLayout" />

            <Button
                android:id="@+id/page_CustomVew_ShadowView"
                style="@style/btn"
                android:text="@string/page_CustomView_ShadowView" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>