<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_AdapterViewFlipper" />

    <com.hades.example.android.widget.view_animator.adapterviewflipper.v3.MyAdapterViewFlipper
        android:id="@+id/adapterViewFlipper1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_300"
        android:layout_below="@+id/topic"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

    <com.hades.example.android.widget.view_animator.adapterviewflipper.v3.MyAdapterViewFlipper
        android:id="@+id/adapterViewFlipper2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/adapterViewFlipper1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/green" />
</RelativeLayout>