<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="thumbTint and thumbTintMode" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=add" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="add" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=multiply" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="multiply" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=screen" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="screen" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=src_atop" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="src_atop" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=src_in" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="src_in" />

    <TextView
        style="@style/tv"
        android:text="No thumbTintMode" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light" />

    <TextView
        style="@style/tv"
        android:text="thumbTintMode=src_over" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:max="100"
        android:progress="40"
        android:secondaryProgress="60"
        android:thumbTint="@android:color/holo_green_light"
        android:thumbTintMode="src_over" />
</LinearLayout>