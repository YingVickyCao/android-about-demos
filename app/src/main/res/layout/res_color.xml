<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/color1"
                style="@style/tv"
                android:text="Color 1" />

            <TextView
                android:id="@+id/color2"
                style="@style/tv"
                android:text="Color 2" />

            <TextView
                android:id="@+id/color3"
                style="@style/tv"
                android:text="Color 3" />

            <TextView
                android:id="@+id/color4"
                style="@style/tv"
                android:text="Color 4" />

            <TextView
                android:id="@+id/color5"
                style="@style/tv"
                android:text="Color 5" />

            <TextView
                android:id="@+id/color6"
                style="@style/tv"
                android:text="Color 6" />

            <TextView
                android:id="@+id/color7"
                style="@style/tv"
                android:text="Color 7" />

            <Button
                android:id="@+id/testColorConvert"
                style="@style/btn"
                android:layout_gravity="center"
                android:text="Color Convert" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>