<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_Toast" />

    <TextView
        android:id="@+id/showNormalToast"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="@string/show_normal_toast"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/androidToast"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Android Toast"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/showCustomToast"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="@string/show_custom_toast"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/toast_without_icon_in_dark_theme"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast without icon in Dark Theme"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/toast_without_icon_in_light_theme"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast without icon in Light Theme"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/toast_with_icon_in_dark_theme"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast with icon in Dark Theme"
        android:textColor="#171a1c" />

    <!-- Change Bg color
    Use bg-2. background s-0 not work   -->
    <TextView
        android:id="@+id/toast_with_icon_in_light_theme"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast with icon in Light Theme"
        android:textColor="#171a1c" />

    <!--  Outlined by LevelListDrawable s-0 stroke   -->
    <TextView
        android:id="@+id/toast_with_icon_in_light_theme2"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast with icon in Light Theme 2"
        android:textColor="#171a1c" />

    <!-- Elevated (Shadow) by .9.png    -->
    <TextView
        android:id="@+id/toast_with_icon_in_light_theme3"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast with icon in Light Theme 3"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/toast_4_custom_width_and_position"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast for custom width and position"
        android:textColor="#171a1c" />

    <TextView
        android:id="@+id/toast_with_icon_4_custom_width_and_position"
        style="@style/tv"
        android:minHeight="45dp"
        android:text="Toast with icon for custom width and position"
        android:textColor="#171a1c" />

    <Button
        style="@style/btn"
        android:background="@drawable/ab_solid_shadow_material" />


</LinearLayout>