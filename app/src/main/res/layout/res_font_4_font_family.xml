<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/font_page_subject"
        android:text="android:fontFamily vs app:fontFamily" />

    <LinearLayout
        style="@style/font_page_group_container"
        android:layout_weight="3">

        <!-- 同一个字体，android:fontFamily 和 app:fontFamily 效果一样      -->
        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/averia_regular" />

        <TextView
            style="@style/font_page_item"
            app:fontFamily="@font/averia_regular" />
    </LinearLayout>

    <!-- 最终结论：优先级 app:fontFamily > android:fontFamily > theme app:fontFamily > theme android:fontFamily，同时出现时，优先级高的生效。 -->
    <LinearLayout
        style="@style/font_page_group_container"
        android:layout_weight="3">

        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/consola" />

        <TextView
            style="@style/font_page_item"
            app:fontFamily="@font/averia_regular" />

        <!-- app:fontFamily  和 android:fontFamily同时出现，app:fontFamily生效      -->
        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/consola"
            app:fontFamily="@font/averia_regular" />
    </LinearLayout>

    <LinearLayout
        style="@style/font_page_group_container"
        android:layout_weight="3">

        <TextView
            style="@style/font_page_item"
            android:theme="@style/AppTheme_font_1" />

        <!-- app:fontFamily > theme app:fontFamily,同时存在时，app:fontFamily生效   -->
        <TextView
            style="@style/font_page_item"
            android:theme="@style/AppTheme_font_1"
            app:fontFamily="@font/averia_regular" />

        <!-- app:fontFamily > android:fontFamily > theme app:fontFamily, 同时存在时，app:fontFamily生效 -->
        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/consola"
            android:theme="@style/AppTheme_font_1"
            app:fontFamily="@font/averia_regular" />
    </LinearLayout>

    <LinearLayout
        style="@style/font_page_group_container"
        android:layout_weight="3">

        <TextView
            style="@style/font_page_item"
            android:theme="@style/AppTheme_font_2" />

        <!-- android:fontFamily > theme android:fontFamily, 同时存在时，android:fontFamily 生效       -->
        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/consola"
            android:theme="@style/AppTheme_font_2" />

        <!-- app:fontFamily > android:fontFamily > theme android:fontFamily, 同时存在时，app:fontFamily生效 -->
        <TextView
            style="@style/font_page_item"
            android:fontFamily="@font/consola"
            android:theme="@style/AppTheme_font_2"
            app:fontFamily="@font/averia_regular" />
    </LinearLayout>

    <LinearLayout
        style="@style/font_page_group_container"
        android:layout_weight="3">

        <!-- theme app:fontFamily > theme android:fontFamily,同时存在时，app:fontFamily生效 -->
        <TextView
            style="@style/font_page_item"
            android:theme="@style/AppTheme_font_3" />
    </LinearLayout>
</LinearLayout>