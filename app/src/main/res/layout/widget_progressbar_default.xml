<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        style="@style/tv"
        android:text="style = Middle(Default)" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content" />

    <TextView
        style="@style/tv"
        android:text="style = Small" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content" />

    <TextView
        style="@style/tv"
        android:text="style = Large" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content" />

    <View style="@style/div" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:secondaryProgress="60" />

    <TextView
        style="@style/tv"
        android:text="style = Horizontal" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:secondaryProgress="60" />

    <View style="@style/div" />

    <TextView
        style="@style/tv"
        android:text="background" />

    <ProgressBar
        android:background="@android:color/holo_red_light"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content" />

    <View style="@style/div" />

    <TextView
        style="@style/tv"
        android:text="进度条 Height" />

    <ProgressBar
        style="@style/progressbar_h"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="@dimen/margin_small"
        android:maxHeight="2dp"
        android:minHeight="2dp" />

    <ProgressBar
        style="@style/progressbar_h"
        android:background="@android:color/holo_blue_light"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        android:maxHeight="2dp"
        android:minHeight="2dp" />

    <View style="@style/div" />


    <ProgressBar
        style="@style/progressbar_h"
        android:background="@android:color/holo_blue_light"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_small"
        android:maxHeight="2dp"
        android:minHeight="2dp" />

    <View style="@style/div" />

    <TextView
        style="@style/tv"
        android:text="Tint" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressBackgroundTint="#ff0000"
        android:progressTint="#0000ff"
        android:secondaryProgress="60"
        android:secondaryProgressTint="#00ff00" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateTint="@android:color/holo_orange_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <View style="@style/div" />

    <TextView
        style="@style/tv"
        android:text="Custom 进度条的背景色、progress and secondaryProgress bg color" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/drawable_layerlist_4_progress_horizontal_v2"
        android:secondaryProgress="60" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressBackgroundTint="@color/progressBackground2"
        android:progressDrawable="@drawable/drawable_layerlist_4_progress_horizontal_v2"
        android:progressTint="@color/progress2"
        android:secondaryProgress="60"
        android:secondaryProgressTint="@color/secondaryProgress2" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/drawable_layerlist_4_progress_horizontal_material"
        android:secondaryProgress="60" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@android:color/holo_green_light"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/drawable_layerlist_4_progress_horizontal_material"
        android:secondaryProgress="60" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@android:color/holo_green_light"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/drawable_layerlist_4_progress_horizontal_material"
        android:secondaryProgress="60" />

    <View style="@style/div" />

    <TextView
        style="@style/tv"
        android:text="indeterminate" />

    <ProgressBar
        style="@style/progressbar_h"
        android:indeterminate="true"
        android:layout_marginTop="@dimen/margin_small" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ProgressBar
            style="@style/progressbar"
            android:layout_marginTop="@dimen/margin_small" />

        <ProgressBar
            style="@style/progressbar"
            android:indeterminate="true"
            android:layout_marginTop="@dimen/margin_small" />
    </LinearLayout>

    <View style="@style/div" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/tv"
            android:text="TBD:Inverse" />

        <ProgressBar
            style="?android:attr/progressBarStyleLargeInverse"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>