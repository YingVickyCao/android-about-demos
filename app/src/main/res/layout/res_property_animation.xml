<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn"
                    style="@style/btn"
                    android:background="@android:color/holo_red_dark"
                    android:text="Bg color" />

                <Button
                    android:id="@+id/change_bg_color_xml"
                    style="@style/btn"
                    android:text="XML - objectAnimation" />

                <Button
                    android:id="@+id/change_bg_color_java"
                    style="@style/btn"
                    android:text="Java - objectAnimation" />

                <Button
                    android:id="@+id/change_bg_color_by_valueAnimation_java"
                    style="@style/btn"
                    android:text="Java - ValueAnimation" />
            </LinearLayout>

            <View style="@style/div" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn2"
                    style="@style/btn"
                    android:text="X Y" />

                <Button
                    android:id="@+id/AnimatorSet_translationXY_by_XML"
                    style="@style/btn"
                    android:layout_above="@+id/AnimatorSet_translationXY_by_java"
                    android:layout_alignParentEnd="true"
                    android:text="XML" />

                <Button
                    android:id="@+id/AnimatorSet_translationXY_by_java"
                    style="@style/btn"
                    android:layout_above="@+id/PropertyValuesHolder_translationXY_by_java"
                    android:layout_alignParentEnd="true"
                    android:text="Java - AnimatorSet" />

                <Button
                    android:id="@+id/PropertyValuesHolder_translationXY_by_java"
                    style="@style/btn"
                    android:layout_above="@+id/moveOver"
                    android:layout_alignParentEnd="true"
                    android:text="Java - PropertyValuesHolder" />

                <Button
                    android:id="@+id/moveOver"
                    style="@style/btn"
                    android:layout_above="@+id/moveBack"
                    android:layout_alignParentEnd="true"
                    android:text="Move Over" />

                <Button
                    android:id="@+id/moveBack"
                    style="@style/btn"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="Move Back" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>