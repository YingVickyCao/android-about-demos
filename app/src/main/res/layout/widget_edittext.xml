<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_EditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/tv.small"
            android:text="textVisiblePassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:inputType="textVisiblePassword"
            android:text="1234" />

        <View style="@style/div" />

        <TextView
            style="@style/tv.small"
            android:text="numberPassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:inputType="numberPassword"
            android:text="1234" />

        <View style="@style/div" />

        <TextView
            style="@style/tv.small"
            android:text="textPassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:inputType="textPassword"
            android:text="1234" />

        <View style="@style/div" />

        <TextView
            style="@style/tv.small"
            android:text="textWebEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:inputType="textWebEditText"
            android:text="1234" />

        <View style="@style/div" />

        <Button
            android:id="@+id/showAsPassword"
            style="@style/btn.small"
            android:text="Change show as password" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:text="1234" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>