<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_font" />

    <!-- 使用默认字体  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string" />

    <!--  >= Android 8.0(26)支持font -->
    <!-- 使用单个字体  -->
    <include layout="@layout/res_font_since_api_26_v1" />

    <!-- 使用字体系列，TextView会根据需要自行切换，以使用该系列中的字体文件  -->
    <include
        layout="@layout/res_font_since_api_26_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20" />

    <!--  使用支持库，>=Android 4.1(16)支持font -->
    <include
        layout="@layout/res_font_since_api_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20" />
</LinearLayout>