<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/topic"
        android:text="@string/page_CustomView_Canvas" />

    <!-- Canvas and Paint   -->
    <com.hades.example.android.widget.custom_view.MyView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!--  paint.setPathEffect  -->
    <com.hades.example.android.widget.custom_view.PathWithPathEffect
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200"
        android:visibility="gone" />

    <!--
        Path
        canvas.drawPath
    -->
    <com.hades.example.android.widget.custom_view.Triangle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- paint.setStyle(Paint.Style.FILL)   -->
    <com.hades.example.android.widget.custom_view.Circle4Fill
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- paint.setStyle(Paint.Style.STROKE)   -->
    <com.hades.example.android.widget.custom_view.Circle4Stroke
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- paint.setStyle(Paint.Style.FILL_AND_STROKE)   -->
    <com.hades.example.android.widget.custom_view.Circle4FillStroke
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- paint.setShader Paint设置渐变器   -->
    <com.hades.example.android.widget.custom_view.CircleWithShader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawBitmap   -->
    <com.hades.example.android.widget.custom_view.DrawBitmap
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawLine   -->
    <com.hades.example.android.widget.custom_view.Line
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawOval   -->
    <com.hades.example.android.widget.custom_view.Oval
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawRect-->
    <com.hades.example.android.widget.custom_view.RectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawRect-->
    <com.hades.example.android.widget.custom_view.Square
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawRoundRect   -->
    <com.hades.example.android.widget.custom_view.RectWithBorder
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- canvas.drawText   -->
    <com.hades.example.android.widget.custom_view.Text
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>