<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topic"
        style="@style/topic"
        android:text="@string/page_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- android:tint and android:tintMode
             android:src, android:tint ,and app:srcCompat: 顺序与使用什么类型的图片无关
             -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_adjust_black_18dp" />

                <!-- (android:tint > android:src)✓ -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_adjust_black_18dp"
                    android:tint="@color/colorAccent" />

                <!-- android:src ✓ > app:srcCompat -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_adjust_black_18dp"
                    app:srcCompat="@drawable/ic_svg_home" />

                <!-- ( android:tint > android:src ) ✓ > app:srcCompat -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_adjust_black_18dp"
                    android:tint="@android:color/holo_orange_dark"
                    app:srcCompat="@drawable/ic_svg_home" />
            </LinearLayout>

            <View style="@style/div" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/requestViewSize"
                    style="@style/btn"
                    android:text="@string/request_view_size" />

                <com.hades.example.android.widget.textview.MyTextView
                    android:id="@+id/tv1"
                    style="@style/tv"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_100"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_red_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/toggleHideShow"
                        style="@style/btn"
                        android:layout_alignParentStart="true"
                        android:textOff="Hide"
                        android:textOn="Show" />

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/btn"
                        android:layout_alignParentEnd="true"
                        android:text="@string/page_TextView" />
                </RelativeLayout>

            </LinearLayout>

            <View style="@style/div" />

            <include layout="@layout/widget_textview_4_click_action" />
            <!-- 底部文字对齐,START -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="@dimen/text_size_30" />

                <!-- android:layout_alignBaseline="@id/left"               -->
                <TextView
                    android:id="@+id/right"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/left"
                    android:layout_alignParentEnd="true"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="100" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:layout_marginTop="@dimen/margin_tiny"
                android:visibility="gone">

                <TextView
                    android:id="@+id/left2"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_100"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="@dimen/text_size_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- app:layout_constraintBaseline_toBaselineOf="@id/left2"               -->
                <TextView
                    android:id="@+id/right2"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="100"
                    app:layout_constraintBaseline_toBaselineOf="@id/left2"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- 底部文字对齐,END -->

            <!--   文字与图片对齐,START         -->
            <!--  默认          -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100">

                <TextView
                    android:layout_width="@dimen/size_100"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="@dimen/text_size_30" />

                <ImageView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/green"
                    android:gravity="center"
                    android:src="@drawable/ic_launcher"
                    android:text="100" />
            </RelativeLayout>

            <!--   文字与图片底部对齐         -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:layout_marginTop="@dimen/margin_tiny"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="@dimen/text_size_30" />

                <!-- android:layout_alignBaseline="@id/textview" -->
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_alignBaseline="@id/textview"
                    android:layout_alignParentEnd="true"
                    android:background="@color/green"
                    android:baselineAlignBottom="false"
                    android:gravity="center"
                    android:src="@drawable/ic_launcher"
                    android:text="100" />
            </RelativeLayout>
            <!--   文字与图片对齐,END         -->
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>