<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_s_0"
    android:gravity="center"
    android:orientation="vertical">
    <!--    android:alpha="0.9"-->

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_frame_4_with_icon_dark"
        android:orientation="vertical">
        <!--        android:alpha="0.8"-->

        <ImageView
            style="@style/btn_small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/li_jiang" />

        <TextView
            android:id="@+id/message"
            style="@style/tv.small"
            android:shadowRadius="2.75"
            android:text="@string/cv_toast_example"
            android:textColor="@color/dark_text_0"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
</LinearLayout>