<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/topic"
        android:text="@string/page_content_provider_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/openSystemGallery"
            style="@style/btn_small"
            android:text="Open System Gallery" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chooseSystemGallery"
            style="@style/btn_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose System Gallery" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chooseGallery"
            style="@style/btn_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Gallery" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>