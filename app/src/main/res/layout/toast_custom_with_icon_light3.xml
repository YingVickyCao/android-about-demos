<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ab_solid_shadow_material">
    <!--    android:alpha="0.9"-->
    <!--    android:background="@color/light_s_0"-->
    <!--    android:background="@drawable/shadow_1"-->

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_frame_4_with_icon_light3"
        android:orientation="vertical">
        <!--        android:alpha="0.8"-->

        <ImageView
            style="@style/btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/li_jiang" />

        <!-- shadowDX、shadowDy、shadowRadius
        设置 阴影的横、纵坐标偏移，以及阴影的半径
        https://blog.csdn.net/ly0303521/article/details/50955166-->
        <TextView
            android:id="@+id/message"
            style="@style/tv.small"
            android:shadowRadius="2.75"
            android:text="@string/cv_toast_example"
            android:textColor="@color/text_0_light"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
</FrameLayout>