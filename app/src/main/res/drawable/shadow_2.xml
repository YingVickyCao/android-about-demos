<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#14FF0000"
                android:centerY="4"
                android:endColor="#00FF0000"
                android:gradientRadius="5"
                android:startColor="#42FF0000" />
            <!-- 设置内填充 -->
            <padding
                android:bottom="10dp"
                android:left="4dp"
                android:right="4dp"
                android:top="7dp" />
            <!-- 设置圆角矩形 -->
            <corners android:radius="@dimen/radius_size" />
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shadow_radius" />
            <solid android:color="#fff" />
            <padding
                android:bottom="@dimen/shadow_padding"
                android:left="@dimen/shadow_padding"
                android:right="@dimen/shadow_padding"
                android:top="@dimen/shadow_padding" />
        </shape>
    </item>
</layer-list>