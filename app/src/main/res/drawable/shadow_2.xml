<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners android:radius="@dimen/shadow_radius" />
            <padding
                android:bottom="@dimen/shadow_padding"
                android:left="@dimen/shadow_padding"
                android:right="@dimen/shadow_padding"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shadow_radius" />
            <solid android:color="#fff" />
            <padding
                android:bottom="@dimen/shadow_padding"
                android:left="@dimen/shadow_padding"
                android:right="@dimen/shadow_padding"
                android:top="@dimen/shadow_padding" />
        </shape>
    </item>
</layer-list>