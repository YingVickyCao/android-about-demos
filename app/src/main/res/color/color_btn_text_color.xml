<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed   -->
    <item android:color="@android:color/white" android:state_enabled="true" android:state_pressed="true" />
    <!-- Android 中有focus 状态。但通常情况下看不出效果. 模拟器按上下键有效果  -->
    <item android:color="@android:color/holo_green_dark" android:state_enabled="true" android:state_focused="true" />
    <!-- Android 中有hover 状态。但通常情况下看不出效果   -->
    <item android:color="@android:color/holo_blue_dark" android:state_enabled="true" android:state_hovered="true" />
    <!-- Default   -->
    <item android:color="@android:color/black" android:state_enabled="true" />
    <!-- Disable   -->
    <item android:color="#66141619" android:state_enabled="false" />
</selector>