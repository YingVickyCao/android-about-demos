<?xml version="1.0" encoding="UTF-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="2dp"
    android:keyWidth="25%p"
    android:keyHeight="50dp"
    android:verticalGap="2dp">
    <!-- horizontalGap,verticalGap 实现键盘key 之间的分割线   -->

    <Row>
        <!--        android:keyEdgeFlags="left"-->
        <Key
            android:codes="113"
            android:keyLabel="q" />
        <Key
            android:codes="119"
            android:keyLabel="w" />

        <Key
            android:codes="111"
            android:keyLabel="o" />

        <Key
            android:codes="112"
            android:keyLabel="p" />
    </Row>
    <Row>
        <Key
            android:codes="97"
            android:keyLabel="a" />
        <Key
            android:codes="115"
            android:keyLabel="s" />
        <Key
            android:codes="100"
            android:keyLabel="d" />

        <Key
            android:codes="108"
            android:keyLabel="l" />
    </Row>
    <Row android:rowEdgeFlags="bottom">
        <!--        Space -->
        <Key
            android:codes="32"
            android:keyIcon="@drawable/ic_home" />

        <Key
            android:codes="-5"
            android:keyIcon="@drawable/ic_delete" />

        <!--  Done     -->
        <Key
            android:codes="-3"
            android:keyWidth="50%"
            android:keyEdgeFlags="right"
            android:keyLabel="Done" />
    </Row>
</Keyboard>